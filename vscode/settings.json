// Place your settings in this file to overwrite the default settings
{
	"workbench.colorTheme": "Pink Cat Boo",
	"editor.fontSize": 16,
	"editor.fontFamily": "'Cascadia Code', Menlo, Monaco, 'Courier New', monospace",
	"files.exclude": {
		"**/node_modules": true,
		"**/vendor": true,
		"**/plugins/akismet": true,
		"**/plugins/classic-editor": true,
		"**/plugins/cmb2": true,
		"**/plugins/custom-content-width": true,
		"**/plugins/donation-thermometer": true,
		"**/plugins/duracelltomi-google-tag-manager": true,
		"**/plugins/enhanced-media-library": true,
		"**/plugins/genesis-*": true,
		"**/plugins/google-*": true,
		"**/plugins/gravityforms": true,
		"**/plugins/hyperdb": true,
		"**/plugins/jetpack": true,
		"**/plugins/mailchimp*": true,
		"**/plugins/mailgun": true,
		"**/plugins/media-*": true,
		"**/plugins/monster*": true,
		"**/plugins/post-tags*": true,
		"**/plugins/really-simple-*": true,
		"**/plugins/redirection": true,
		"**/plugins/shortcodes*": true,
		"**/plugins/simple-*": true,
		"**/plugins/tinymce*-*": true,
		"**/plugins/user-role-editor": true,
		"**/plugins/wordpress-seo*": true,
		"**/plugins/wp*": true,
		"**/plugins/wpe*": true,
		"**/plugins/wpmu*": true,
		"**/plugins/yoast*": true
	},
	"editor.minimap.enabled": false,
	"editor.lineNumbers": "relative",
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.formatOnType": true,
	"terminal.integrated.fontFamily": "'Cascadia Code', Menlo, Monaco, 'Courier New', monospace",
	"terminal.integrated.fontSize": 16,
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[php]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"php.executablePath": "/usr/local/bin/php",
	"artisan.php.location": "/usr/local/bin/php",
	"editor.wordWrap": "on",
	"explorer.confirmDelete": false,
	"explorer.autoReveal": false,
	"editor.renderWhitespace": "none",
	"explorer.confirmDragAndDrop": false,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"prettier.useTabs": true,
	"editor.folding": false,
	"vim.leader": "<space>",
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": ["j"],
			"after": ["g", "j"]
		},
		{
			"before": ["k"],
			"after": ["g", "k"]
		}
	],
	"typescript.updateImportsOnFileMove.enabled": "always",
	"javascript.updateImportsOnFileMove.enabled": "always",
	"workbench.activityBar.visible": false,
	"git.ignoreLegacyWarning": true,
	"extensions.ignoreRecommendations": true,
	"php.suggest.basic": false,
	"workbench.colorCustomizations": {
		"statusBar.background": "#EF98E6",
		"statusBar.foreground": "#16161d"
	},
	"php.validate.executablePath": "/usr/local/bin/php",
	"peacock.affectActivityBar": false,
	"peacock.showColorInStatusBar": false,
	"peacock.favoriteColors": [
